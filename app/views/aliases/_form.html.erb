<%= form_for @form_object, remote: true, html: {role: :form} do |f| %>
  <div class="form-group">
    <%= f.label :name, class: 'control-label' %>
    <%= f.text_field :name, class: 'form-control', autofocus: true %>
    <span class="help-block"></span>
  </div>

  <div class="form-group">
    <%= f.label :from, class: 'control-label' %>
    <%= f.text_field :from, class: 'form-control' %>
    <span class="help-block"></span>
  </div>

  <div class="form-group">
    <%= f.label :to, class: 'control-label' %>
    <%= f.text_area :to, class: 'form-control', rows: 5 %>
    <span class="help-block"></span>
  </div>

  <div class="checkbox">
    <label>
      <%= f.check_box :enabled %>
      <%= Alias.human_attribute_name :enabled %>
    </label>
  </div>

  <%= link_to_cancel domain_path(@domain, anchor: 'aliases') %>
  <%= f.submit class: 'btn btn-primary' %>

  <% unless @alias.new_record? %>
    <%= link_to_delete alias_path(@alias) %>
  <% end  %>
<% end %>
