<%= form_for @form_object, remote: true, html: {role: :form} do |f| %>
  <div class="form-group">
    <%= f.label :from, class: 'control-label' %>
    <%= f.text_field :from, class: 'form-control', autofocus: true %>
    <span class="help-block"></span>
  </div>

  <div class="form-group">
    <%= f.label :to, class: 'control-label' %>
    <%= f.text_field :to, class: 'form-control' %>
    <span class="help-block"></span>
  </div>

  <div class="checkbox">
    <label>
      <%= f.check_box :enabled %>
      <%= SenderBcc.human_attribute_name :enabled %>
    </label>
  </div>

  <%= link_to_cancel domain_path(@domain, anchor: 'sender_bccs') %>
  <%= f.submit class: 'btn btn-primary' %>
  <% unless @sender_bcc.new_record? %>
    <%= link_to_delete sender_bcc_path(@sender_bcc) %>
  <% end %>
<% end %>
