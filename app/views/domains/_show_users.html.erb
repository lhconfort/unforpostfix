<div class="tab-pane fade active in" id="users">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th><%= User.human_attribute_name :id %></th>
        <th><%= User.human_attribute_name :name %></th>
        <th><%= User.human_attribute_name :email %></th>
        <th><%= User.human_attribute_name :enabled %></th>
        <th><%= User.human_attribute_name :created_at %></th>
      </tr>
    </thead>

    <tbody>
      <% if @domain.users.empty? %>
        <tr>
          <td colspan="100%" class="text-center"><%=t('tables.no_records')%></td>
        </tr>
      <% end %>
      <% @domain.users.each do |user| %>
        <tr>
          <td><%= link_to user.id, edit_user_path(user) %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= bool_t(user.enabled) %></td>
          <td><%= user.created_at.to_date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to_new new_domain_user_path(@domain) %>
</div>
