#!/bin/bash

PATH=<%= absolute_path(default_environment["PATH"], user) %>
PIDFILE=<%= "#{shared_path}/pids/sidekiq.pid" %>
export RAILS_ENV=production

getPID() {
  if [ ! -z `cat $PIDFILE 2> /dev/null` ]; then
    ps -ef | awk '{ print $2 }' | grep -w `cat $PIDFILE`
  fi
}

case "$1" in
  start)
    echo -ne "<%= "Starting #{application}-sidekiq..." %>"

    if [ -z "$(getPID)" ]; then
      cd <%=current_path%>
      bundle exec sidekiq -d -v -P $PIDFILE -e $RAILS_ENV -L <%= "#{shared_path}/log/sidekiq.log" %>

      echo "started!"
    else
      echo "is already running!"
    fi
    ;;

  stop)
    echo -ne "<%= "Stopping #{application}-sidekiq..." %>"

    if [ -z "$(getPID)" ]; then
      echo "is not running!"
    else
      kill -TERM $(getPID) &> /dev/null

      echo "stopped!"
    fi
    ;;

  restart)
    $0 stop
    sleep 3
    $0 start
    ;;

  reject_jobs)
    echo -ne "<%= "Rejecting new jobs #{application}-sidekiq..." %>"

    if [ -z "$(getPID)" ]; then
      echo "is not running!"
    else
      kill -USR1 $(getPID) &> /dev/null

      echo "new jobs will be rejected"
    fi
    ;;

  *)
    echo "usage: $0 {start|stop|restart|reject_jobs}"
esac
exit 0
