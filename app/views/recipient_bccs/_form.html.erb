<%= form_for @form_object, remote: true, html: {role: :form} do |f| %>
  <div class="form-group">
    <%= f.label :from, class: 'control-label' %>
    <%= f.text_field :from, class: 'form-control', autofocus: true %>
    <span class="help-block"></span>
  </div>

  <div class="form-group">
    <%= f.label :to, class: 'control-label' %>
    <%= f.text_field :to, class: 'form-control' %>
    <span class="help-block"></span>
  </div>

  <div class="checkbox">
    <%= f.label :enabled %>
    <%= f.check_box :enabled %>
  </div>

  <%= link_to_cancel domain_path(@domain, anchor: 'recipient_bccs') %>
  <%= f.submit class: 'btn btn-primary' %>
  <%= link_to_delete recipient_bcc_path(@recipient_bcc) %>
<% end %>
